apiVersion: apps/v1
kind: Deployment
metadata:
  name: simplexapp
spec:
  replicas: 10
  minReadySeconds: 45 # wait for 10 sec before pod is ready going to next
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 1  # take down 1 pod at a time
      maxSurge: 2        # bring one at a time
  selector:
    matchLabels:
      app: simplexapp
  template:
    metadata:
      name: simplexapp
      labels:
        app: simplexapp
    spec:
      containers:
      - image: javanogeda254/simplexapp:v1
        name: app

---
kind: Service
apiVersion: v1
metadata:
   name: simplexapp-svc
spec:
  type: NodePort
  selector: 
    app: simplexapp
  ports:
    - port: 80
      targetPort: 80
